<body>
  <h1>üéâ G·ªçi H·ªçc Sinh Ng·∫´u Nhi√™n Vui Nh·ªôn</h1>
  <textarea id="namesInput" placeholder="Nh·∫≠p danh s√°ch h·ªçc sinh, m·ªói t√™n 1 d√≤ng..."></textarea>
  <button onclick="callRandom()">G·ªçi Ng·∫´u Nhi√™n!</button>
  <div id="result"></div>

  <script>
    function createConfetti(x, y) {
      const icons = ['üéâ', '‚ú®', 'üí•', 'üåü', 'üéà', 'üéä', 'üéÄ'];
      const confetti = document.createElement('div');
      confetti.classList.add('confetti');
      confetti.textContent = icons[Math.floor(Math.random() * icons.length)];
      confetti.style.left = x + 'px';
      confetti.style.top = y + 'px';
      confetti.style.fontSize = (Math.random() * 20 + 20) + 'px';
      document.body.appendChild(confetti);
      setTimeout(() => {
        confetti.remove();
      }, 3000);
    }

    function speak(text) {
      if (!window.speechSynthesis) return;
      const utterance = new SpeechSynthesisUtterance(text);
      utterance.lang = 'vi-VN';
      window.speechSynthesis.cancel();
      window.speechSynthesis.speak(utterance);
    }

    function callRandom() {
      const input = document.getElementById('namesInput').value.trim();
      if (!input) {
        alert('Vui l√≤ng nh·∫≠p danh s√°ch t√™n h·ªçc sinh!');
        return;
      }
      const names = input.split('\n').filter(name => name.trim().length > 0);
      const randomIndex = Math.floor(Math.random() * names.length);
      const selectedName = names[randomIndex];
      const resultDiv = document.getElementById('result');

      // Show name with glow animation
      resultDiv.textContent = selectedName;

      // T·∫°o confetti xung quanh t√™n
      for (let i = 0; i < 30; i++) {
        const x = window.innerWidth / 2 + (Math.random() - 0.5) * 200;
        const y = window.innerHeight / 2 + (Math.random() - 0.5) * 100;
        createConfetti(x, y);
      }

      // ƒê·ªçc t√™n h·ªçc sinh
      speak(selectedName);
    }
  </script>
